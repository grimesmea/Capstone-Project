<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hedgehog_container"
    android:layout_width="match_parent"
    android:layout_height="288dp"
    android:background="@color/color_dark_grey"
    android:elevation="@dimen/appbar_elevation"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hedgehog_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/hedgie_1" />

    <RelativeLayout
        android:id="@+id/hedgie_hearts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/heart_3"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/heart_2"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/heart_3"
            android:layout_toStartOf="@id/heart_3"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/heart_1"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/heart_2"
            android:layout_toStartOf="@id/heart_2"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/heart_4"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/heart_3"
            android:layout_toRightOf="@id/heart_3"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/heart_5"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/heart_4"
            android:layout_toRightOf="@id/heart_4"
            android:scaleType="fitCenter" />
    </RelativeLayout>
</LinearLayout>