<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hearts_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/heart_3"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/heart_2"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@id/heart_3"
        android:layout_toStartOf="@id/heart_3"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/heart_1"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@id/heart_2"
        android:layout_toStartOf="@id/heart_2"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/heart_4"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/heart_3"
        android:layout_toRightOf="@id/heart_3"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/heart_5"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/heart_4"
        android:layout_toRightOf="@id/heart_4"
        android:scaleType="fitCenter" />
</RelativeLayout>