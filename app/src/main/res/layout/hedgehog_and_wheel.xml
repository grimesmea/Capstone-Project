<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wheel_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/hedgehog_wheel_description"
        android:scaleType="fitCenter"
        android:src="@drawable/pricklefit_wheel" />

    <ImageView
        android:id="@+id/hedgehog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/wheel_image"
        android:layout_alignBottom="@id/wheel_image"
        android:scaleType="fitCenter"
        android:src="@drawable/hedgie_1" />
</RelativeLayout>