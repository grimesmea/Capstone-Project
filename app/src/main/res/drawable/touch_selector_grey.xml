<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true" android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/widget_corner_radius" />
            <solid android:color="@color/activated" />
        </shape>
    </item>

    <item android:state_window_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/widget_corner_radius" />
            <solid android:color="@color/dark_grey" />
        </shape>
    </item>

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:state_enabled="false" android:state_focused="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
            <solid android:color="@color/light_grey" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/widget_corner_radius" />
            <solid android:color="@color/light_grey" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
            <solid android:color="@color/light_grey" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/widget_corner_radius" />
            <solid android:color="@color/light_grey" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/widget_corner_radius" />
            <solid android:color="@color/light_grey" />
        </shape>
    </item>

    <!-- Default state. -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/widget_corner_radius" />
            <solid android:color="@color/dark_grey" />
        </shape>
    </item>
</selector>